{
  "pipeline": {
    "name": "general_restore"
  },
  "description": "Bring old photos back to life",
  "transform": {
    "cmd": [
      "python", "run.py", "--input_folder", "/pfs/general_restore_input/", "--output_folder", "/pfs/out", "--GPU", "0" 
    ],
    "image": "nickharvey/abuela-backend:HR-local-v4"
  },
  "standby": true,
  "resource_limits": {
    "memory": "4G",
    "gpu": {
      "type": "nvidia.com/gpu",
      "number": 1
    }
  },
  "input": {
        "pfs": {
            "repo": "general_restore_input",
            "glob": "/*"
        }
    },
    "egress": {
	    "URL": "gs://restored_images/"
    }
}
