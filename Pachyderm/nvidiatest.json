{
  "pipeline": {
    "name": "Nvidia-test"
  },
  "description": "test nvitdia",
  "transform": {
    "cmd": [
      "nvidia-smi", ">", "/pfs/out/output.txt" 
    ],
    "image": "nvidia/cuda:11.0-base"
  },
  "standby": false,
  "resource_limits": {
    "gpu": {
      "type": "nvidia.com/gpu",
      "number": 1
    }
  },
  "resource_requests": {
    "memory": "1G",
    "cpu": 4
  },
  "input": {
        "pfs": {
            "repo": "images",
            "glob": "/*"
        }
    }
}
