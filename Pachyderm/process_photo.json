{
  "pipeline": {
    "name": "Process_Photo"
  },
  "description": "Bring old photos back to life",
  "transform": {
    "cmd": [
      "python", "Source/run.py", "--input_folder", "/pfs/input/images", "--output_folder", "/pfs/out", "--GPU", "0" 
    ],
    "image": "nickharvey/abuela:v1"
  },
  "standby": false,
  "resource_limits": {
    "gpu": {
      "type": "nvidia.com/gpu",
      "number": 1
    }
  },
  "resource_requests": {
    "memory": "10G",
    "cpu": 4
  },
  "input": {
        "pfs": {
            "repo": "images",
            "glob": "/*"
        }
    }
}
